Author : Bharathi H
Purpose :Example given number is positive or negative
*/


#include <stdio.h>

int main()
{
   int number,sign;
   
  printf("Enter the number: ");
  scanf("%d",&number);
  
  if(number < 0)
  {
  sign = -1;
  }
  else if(number == 0){
  sign = 0;
  }
  else{
  sign = 1;
  }
  printf("Sign = %d\n",number);
   
   
   return 0;

   
}
