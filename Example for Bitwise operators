/*
Author : Bharathi H
Purpose :Example for Bitwise operators
*/

#include<stdio.h>
int main ( )
{
  int a = 60; //  60 binary equivalent is 0011 1100
  int b = 13; //   13 binary equivalent is 0000 1101
  int c = 0;
  
  c = a & b;    									
  printf("c is %d\n",c);
  
  c = a | b ;    								
  printf("c is %d\n",c);
  
  c = a ^ b;   								
  printf("c is %d\n",c);
  
  c = ~a;   									
  printf("c is %d\n",c);
  
  c = a << 2;  								
  printf("c is %d\n",c);
  
  c = a >> 2;  								
  printf("c is %d\n",c);
   
  return 0;
}
